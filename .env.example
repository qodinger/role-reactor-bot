# =============================================================================
# Role Reactor Bot API Configuration
# =============================================================================

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# Server Configuration
API_PORT=3030
NODE_ENV=development
SESSION_SECRET=your_session_secret_here
SERVE_STATIC=false

# Internal Authentication [REQUIRED]
# Shared secret between website and bot for authorized internal requests
# Generate a secure random string: openssl rand -hex 16
INTERNAL_API_KEY=your_internal_api_key_here

# Webhook Configuration
WEBHOOK_TOKEN=your_webhook_verification_token_here
WEBHOOK_VERIFICATION=true

# Logging & Monitoring
LOG_LEVEL=info
REQUEST_LOGGING=true
HEALTH_CHECKS=true
DOCKER_HEALTH_CHECK=true

# Security
CORS_ORIGIN=*
