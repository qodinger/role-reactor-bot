# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
NODE_ENV=development
PERFORMANCE_MONITORING=true
MEMORY_THRESHOLD=512000000

# =============================================================================
# DISCORD CONFIGURATION (REQUIRED)
# =============================================================================
DISCORD_TOKEN=your_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_DEVELOPERS=developer_ids_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=role-reactor-bot-dev

# =============================================================================
# API RATE LIMITING
# =============================================================================
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW_MS=60000
INTERNAL_API_KEY=your_internal_api_key_here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=./logs/bot.log
LOG_CONSOLE=true

# =============================================================================
# WEBSITE AUTHENTICATION
# =============================================================================
DISCORD_CLIENT_SECRET=your_client_secret_here
TOKEN_ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here
BOT_URL=http://localhost:3000

# =============================================================================
# AI CONFIGURATION
# =============================================================================
AI_MAX_CONCURRENT=5
AI_REQUEST_TIMEOUT=300000
AI_USER_RATE_LIMIT=20
AI_USER_RATE_WINDOW=60000
AI_RETRY_ATTEMPTS=2
AI_RETRY_DELAY=1000
AI_MAX_QUEUE_SIZE=100
AI_QUEUE_TIMEOUT=120000

# Provider-Specific Limits
RUNPOD_MAX_CONCURRENT=2
STABILITY_MAX_CONCURRENT=5
OPENROUTER_MAX_CONCURRENT=10

# =============================================================================
# PROVIDER API KEYS
# =============================================================================
RUNPOD_ENABLED=false
RUNPOD_API_KEY=your_runpod_key_here
RUNPOD_ENDPOINT_ID=your_runpod_endpoint_id_here

STABILITY_API_KEY=your_stability_key_here
OPENROUTER_API_KEY=your_openrouter_key_here

# =============================================================================
# AI CONVERSATION SETTINGS
# =============================================================================
AI_USE_LONG_TERM_MEMORY=true
AI_CONVERSATION_STORAGE_TYPE=mongodb
AI_IMAGE_JOBS_STORAGE_TYPE=mongodb
AI_IMAGE_JOBS_RETENTION_DAYS=7
AI_CONVERSATION_HISTORY_LENGTH=20
AI_CONVERSATION_TIMEOUT=604800000
AI_MAX_CONVERSATIONS=1000

# =============================================================================
# PAYMENT CONFIGURATION (PAYPAL)
# =============================================================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
PAYPAL_MODE=sandbox
PAYPAL_ENABLED=true
PAYPAL_TEST_MODE=true

# =============================================================================
# PAYMENT CONFIGURATION (PLISIO)
# =============================================================================
PLISIO_SECRET_KEY=your_plisio_key_here
PUBLIC_URL=your_public_url_here

# =============================================================================
# WEBHOOK CONFIGURATION (OPTIONAL)
# =============================================================================
WEBHOOK_TOKEN=your_webhook_token
DOCKER_ENV=false
CORS_ORIGIN=*
