# RoleReactor Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Your Discord Bot Token (Required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Your Discord Application Client ID (Required)
# This is needed for deploying slash commands
CLIENT_ID=your_client_id_here

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Target Guild ID (Optional - for development)
# If set, commands will only be deployed to this guild (faster for development)
# Leave empty for global deployment
GUILD_ID=your_guild_id_here

# Bot Configuration
# Customize bot behavior and appearance

# Bot Status (Optional)
# Options: "online", "idle", "dnd", "invisible"
BOT_STATUS=online

# Bot Activity Type (Optional)
# Options: "PLAYING", "STREAMING", "LISTENING", "WATCHING", "COMPETING"
BOT_ACTIVITY_TYPE=WATCHING

# Bot Activity Text (Optional)
# What the bot displays as its activity
BOT_ACTIVITY_TEXT=role reactions

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Logging Level (Optional)
# Options: "debug", "info", "warn", "error"
LOG_LEVEL=info

# Database Configuration (Optional)
# If you want to use a database for role mappings instead of JSON files
# DATABASE_URL=your_database_url_here

# Webhook URL for Logs (Optional)
# Send important events to a Discord webhook
# WEBHOOK_URL=your_webhook_url_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Admin Role IDs (Optional)
# Comma-separated list of role IDs that can use admin commands
# ADMIN_ROLE_IDS=role_id_1,role_id_2,role_id_3

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache Duration (Optional)
# How long to cache role mappings in memory (in milliseconds)
# Default: 300000 (5 minutes)
CACHE_DURATION=300000

# Rate Limiting (Optional)
# Maximum role operations per user per minute
# Default: 10
MAX_ROLE_OPERATIONS_PER_MINUTE=10 