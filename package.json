{
  "type": "module",
  "name": "role-reactor-bot",
  "version": "1.1.0",
  "description": "A Discord bot for self-assignable roles through reactions. Features role management, permission controls, and customizable role-emoji mappings.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:stable": "nodemon --config nodemon.json src/index.js",
    "dev:no-restart": "node src/index.js",
    "build": "echo 'No build step required for Node.js bot'",
    "prebuild": "pnpm run lint && pnpm test",
    "type-check": "node -c src/index.js",
    "health": "node -c src/index.js && echo 'âœ… Syntax check passed'",
    "deploy:dev": "NODE_ENV=development node scripts/deploy-commands.js",
    "deploy:prod": "NODE_ENV=production node scripts/deploy-commands.js",
    "deploy:global": "NODE_ENV=production node scripts/deploy-commands.js --global",
    "delete:commands": "node scripts/delete-commands.js",
    "lint": "eslint src/ scripts/",
    "lint:fix": "eslint src/ scripts/ --fix",
    "format": "prettier --write src/ scripts/",
    "format:check": "prettier --check src/ scripts/",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --watchAll=false",
    "clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "pre-commit": "lint-staged",
    "docker:build": "docker build -t role-reactor-bot .",
    "docker:build:force": "docker build --no-cache -t role-reactor-bot .",
    "docker:run": "docker run --rm --env-file .env --network host role-reactor-bot",
    "docker:run:local": "docker run --rm --env-file .env --network host -e MONGODB_URI=mongodb://localhost:27017 role-reactor-bot",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker stop role-reactor-bot || true",
    "docker:clean": "docker stop role-reactor-bot || true && docker rm role-reactor-bot || true && docker rmi role-reactor-bot || true",
    "docker:update": "git pull origin main && docker system prune -f && pnpm docker:clean && pnpm docker:build:force && pnpm run docker:prod",
    "docker:update:clean": "git pull origin main && docker system prune -f && pnpm docker:clean && pnpm docker:build:force && pnpm run docker:prod",
    "docker:force-update": "git pull origin main && docker system prune -af && docker volume prune -f && pnpm docker:clean && pnpm docker:build:force && pnpm run docker:prod",
    "docker:restart": "docker restart role-reactor-bot",
    "docker:logs": "docker logs -f role-reactor-bot",
    "docker:status": "docker ps | grep role-reactor-bot || echo 'Bot container not running'",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "fix:permissions": "./scripts/fix-permissions.sh",
    "deploy:latest": "./scripts/deploy-latest.sh",
    "deploy:latest:verbose": "./scripts/deploy-latest.sh --verbose",
    "deploy:latest:force": "./scripts/deploy-latest.sh --force"
  },
  "keywords": [
    "discord",
    "bot",
    "roles",
    "reactions",
    "self-assign",
    "role-management",
    "discord.js",
    "automation"
  ],
  "author": {
    "name": "Tyecode",
    "email": "tyecoder@gmail.com",
    "url": "https://github.com/tyecode"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qodinger/role-reactor-bot.git"
  },
  "bugs": {
    "url": "https://github.com/qodinger/role-reactor-bot/issues"
  },
  "homepage": "https://github.com/qodinger/role-reactor-bot#readme",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "dedent": "1.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "emoji-regex": "10.4.0",
    "gradient-string": "^3.0.0",
    "mongodb": "^6.17.0",
    "ora": "^8.2.0",
    "p-limit": "6.2.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@eslint/js": "^9.30.1",
    "@jest/globals": "^30.0.4",
    "eslint": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.0.0",
    "jest": "^30.0.4",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
