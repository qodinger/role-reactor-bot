{
  "watch": [
    "src/index.js",
    "src/config/",
    "src/utils/core/",
    "src/events/",
    "src/features/"
  ],
  "ignore": [
    "src/commands/",
    "src/utils/storage/",
    "src/utils/monitoring/",
    "logs/",
    "data/",
    "*.log",
    ".env*",
    "node_modules/",
    "coverage/",
    ".git/",
    ".vscode/",
    "*.tmp",
    "*.temp",
    "*.cache",
    ".DS_Store",
    "Thumbs.db",
    "**/node_modules/**",
    "**/coverage/**",
    "**/.git/**",
    "**/logs/**",
    "**/data/**"
  ],
  "ext": "js,json",
  "delay": "3000",
  "restartable": "rs",
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node src/index.js"
}
